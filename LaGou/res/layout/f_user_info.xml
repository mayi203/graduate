<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top"
        style="@style/topBar" >

        <TextView
            android:id="@+id/back"
            style="@style/back_text"
            android:text="@string/self" />
    </RelativeLayout>

    <include
        android:id="@+id/lay_info"
        layout="@layout/l_user_info" />

    <TextView
        android:id="@+id/my_resume"
        style="@style/User_Info_TextView"
        android:text="@string/resume" />

    <TextView
        android:id="@+id/my_deliver"
        style="@style/User_Info_TextView"
        android:text="@string/my_deliver" />

    <TextView
        android:id="@+id/clear_save"
        style="@style/User_Info_TextView"
        android:text="@string/clear_save" />

    <TextView
        android:id="@+id/change_user"
        style="@style/User_Info_TextView"
        android:text="@string/change_user" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/deliver_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/darkgreen"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/deliver_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/deliver_position"
            android:paddingLeft="5dp"
            android:textColor="@color/dimgrey" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp" >

        <TextView
            android:id="@+id/deliver_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dimgrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/deliver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/dimgrey" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp" >

        <TextView
            android:id="@+id/deliver_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dimgrey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/deliver_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/dimgrey"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>